                android:text="Mimarlık"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkbox_listelenenblomler_8" />

            <CheckBox
                android:id="@+id/checkbox_listelenenblomler_22"
                android:layout_width="wrap_content"
