            <CheckBox
                android:id="@+id/checkbox_listelenenblomler_23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kimya"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkbox_listelenenblomler_10" />

            <CheckBox
                android:id="@+id/checkbox_listelenenblomler_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çevre Mühendisliği"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkbox_listelenenblomler_11" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/listbol_tercih_listeme_ekle_button"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:text="@string/tercih_listeme_ekle"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />
    <Button
        android:id="@+id/listbol_ana_menu_button"
        android:layout_width="350px"
        android:layout_height="wrap_content"

        android:text="@string/ana_men"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/listbol_tercih_listeme_ekle_button"
        app:layout_constraintEnd_toStartOf="@+id/listbol_tercih_listem_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/listbol_tercih_listem_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonTercihListesi"
        android:text="@string/tercih_listem"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
