            <CheckBox
                android:id="@+id/checkbox_listelenenblomler_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endüstri Mühendisliği"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkbox_listelenenblomler_1" />

            <CheckBox
                android:id="@+id/checkbox_listelenenblomler_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Havacılık ve Uzay Müh."
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkbox_listelenenblomler_2" />

