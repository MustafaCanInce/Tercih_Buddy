<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listelenen_bolumler">


    <TextView
        android:id="@+id/tercih_buddy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tercih_buddy"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/Listelenen_bolumler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listelenen_b_l_mler"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tercih_buddy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <Button
        android:id="@+id/tercih_listeme_ekle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tercih_listeme_ekle"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tercih_listem"
        />

    <Button
        android:id="@+id/tercih_listem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonTercihListesi"
        android:text="@string/tercih_listem"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tercih_listeme_ekle_button" />
</androidx.constraintlayout.widget.ConstraintLayout>